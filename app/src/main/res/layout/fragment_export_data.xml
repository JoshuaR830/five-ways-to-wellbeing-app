<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.data.ExportData">

    <Button
        android:id="@+id/export_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/export_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_done"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sync_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/activitiesFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progress_circle_filled"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/activitiesTextExport"
            app:layout_constraintEnd_toEndOf="@+id/statusTextView"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="@+id/activitiesTextExport">

            <ImageView
                android:id="@+id/activitiesExportImageSync"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_sync" />

            <ImageView
                android:id="@+id/activitiesExportImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_tick"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/surveyFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progress_circle_filled"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/surveysTextExport"
            app:layout_constraintEnd_toEndOf="@+id/statusTextView"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="@+id/surveysTextExport">

            <ImageView
                android:id="@+id/surveyExportImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_tick"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/surveyExportImageSync"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_sync" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/historyFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progress_circle_filled"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/historyTextExport"
            app:layout_constraintEnd_toEndOf="@+id/statusTextView"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="@+id/historyTextExport">

            <ImageView
                android:id="@+id/historyExportImageSync"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_sync" />

            <ImageView
                android:id="@+id/historyExportImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_tick"
                android:visibility="gone" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/scheduleFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progress_circle_filled"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/schedulesTextExport"
            app:layout_constraintEnd_toEndOf="@+id/statusTextView"
            app:layout_constraintTop_toTopOf="@+id/schedulesTextExport">

            <ImageView
                android:id="@+id/scheduleExportImageSync"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_sync" />

            <ImageView
                android:id="@+id/scheduleExportImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_tick"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/activitiesTextExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/export_activities_status"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@+id/statusTextView"
            app:layout_constraintTop_toBottomOf="@+id/statusTextView" />


        <TextView
            android:id="@+id/historyTextExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/export_history_status"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@+id/statusTextView"
            app:layout_constraintTop_toBottomOf="@+id/surveysTextExport" />

        <TextView
            android:id="@+id/surveysTextExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/export_wellbeing_logs_status"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@+id/statusTextView"
            app:layout_constraintTop_toBottomOf="@+id/activitiesTextExport" />


        <TextView
            android:id="@+id/schedulesTextExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/export_schedules_status"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@+id/statusTextView"
            app:layout_constraintTop_toBottomOf="@+id/historyTextExport" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/export_status"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>